import os
import shutil

import icnsutil

from cfg import DB_FILE


def convert():
    if os.path.exists("icon/icon.png"):
        img = icnsutil.IcnsFile()
        img.add_media(file="icon/icon.png")
        img.write("icon/icon.icns")
        os.remove("icon/icon.png")
    else:
        print("png to icns > no .png icon")


def copy_db():
    shutil.copyfile(src=DB_FILE, dst="db.db")


print()
print("1: create icns from png")
print("2: copy db file from application support")
print()

input = int(input())

if input == 1:
    convert()
    print("icns done")
    print()

elif input == 2:
    copy_db()
    print("db done")
    print()
